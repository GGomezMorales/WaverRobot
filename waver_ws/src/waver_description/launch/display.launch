<launch>

  <param name="robot_description" command="$(find xacro)/xacro '$(find waver_description)/urdf/waver.urdf'" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
  <node name="world_to_base_footprint" pkg="tf2_ros" type="static_transform_publisher" args="0 0 0 0 0 0 world base_footprint" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find waver_description)/rviz/waver.rviz" />

</launch>

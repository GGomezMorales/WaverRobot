<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="waver">

    <!-- Define Materials -->
    <material name="blue">
        <color rgba="0 0 1 1" />
    </material>
    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <xacro:include filename="$(find waver_description)/urdf/waver.xacro" />

    <!-- Dummy Link -->
    <link name="dummy_link">
        <visual>
            <geometry>
                <box size="0.01 0.01 0.01" />
            </geometry>
            <material name="red" />
        </visual>
        <collision>
            <geometry>
                <box size="0.01 0.01 0.01" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.01" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001" />
        </inertial>
    </link>

    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.5 0.3 0.02" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.3 0.02" />
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
        </inertial>
    </link>

    <!-- Joint between dummy_link and base_link -->
    <joint name="dummy_to_base" type="fixed">
        <parent link="dummy_link" />
        <child link="base_link" />
        <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>

    <!-- Top Shell -->
    <link name="top_shell_link">
        <visual>
            <geometry>
                <box size="0.5 0.3 0.02" />
            </geometry>
            <material name="red" />
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.3 0.02" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05" />
        </inertial>
    </link>

    <!-- Joint between base_link and top_shell_link -->
    <joint name="base_to_top" type="fixed">
        <parent link="base_link" />
        <child link="top_shell_link" />
        <origin xyz="0 0 0.1" rpy="0 0 0" />
    </joint>

    <!-- Wheels -->
    <xacro:wheel name="wheel_front_left" xyz="0.25 0.15 0" rpy="0 0 0" />
    <xacro:wheel name="wheel_front_right" xyz="0.25 -0.15 0" rpy="0 0 0" />
    <xacro:wheel name="wheel_back_left" xyz="-0.25 0.15 0" rpy="0 0 0" />
    <xacro:wheel name="wheel_back_right" xyz="-0.25 -0.15 0" rpy="0 0 0" />

</robot>